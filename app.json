{
  "expo": {
    "name": "LittleProgress",
    "slug": "LittleProgress",
    "version": "1.2.3",
    "orientation": "portrait",
    "icon": "./assets/icons/app_icon/app_icon.png",
    "scheme": "littleprogress",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {

      "supportsTablet": true,
      "appleTeamId": "WWS7549T2S",
      "bundleIdentifier": "com.darayuthhang.LittleProgress",
    "entitlements": {
      "com.apple.security.application-groups": [
        "group.com.darayuthhang.LittleProgress"
      ]
    },
      "icon": "./assets/icons/app_icon/app_icon.png",
      "infoPlist": {
                "NSSupportsLiveActivities": true,

        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "We need location to show local time",
        "UIBackgroundModes": [
          "audio",
          "fetch"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/icons/app_icon/app_icon.png",
        "backgroundImage": "./assets/icons/app_icon/app_icon.png",
        "monochromeImage": "./assets/icons/app_icon/app_icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.darayuthhang.LittleProgress",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/app_icon/splash_screen.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "sounds": [
            "./assets/sounds/timer-done.wav",
            "./assets/sounds/timer-done.wav"
          ]
        }
      ],
      "expo-sqlite",
      "expo-localization",
      "expo-mail-composer",
      "expo-secure-store",
      "expo-font",
      "expo-audio",
      "@bacons/apple-targets"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "e0fc6ea7-aad9-4f14-91e0-a9255992d222"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/e0fc6ea7-aad9-4f14-91e0-a9255992d222"
    }
  }
}
